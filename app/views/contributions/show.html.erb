<p id="notice"><%= notice %></p>
<div class= "Menus">
    <b> <%= link_to 'HackerNews', contributions_path %></b>
    <td> <%= link_to 'New', contributions_NewIndex_path %></td> 
    <td> | <%= link_to 'Comments', contributions_CommentsIndex_path %></td>
    <td> | <%= link_to 'Submit', new_contribution_path %></td>
    <td> | <%= link_to 'creaUseer', new_user_path %></td>

</div>
<body class="page">
  <div class="subpage">
    <div class="title">
      <%if @contribution.points>0%>
      <FONT color="red"> * </font> 
      <%else%> <%= link_to '^', points_contribution_path(@contribution), method: :put %>
      <%end%>
      <% if @contribution.url.empty? %>
          <small style="color:black"> <%= @contribution.title %> </small>
         
      <% else %>
          <small style="color:black"><%= @contribution.title%></small>
          <a class="url_post" href="<%= @contribution.url %>">(<%= @contribution.url %>)</a>
      <% end %> 
   </div>
    <div class="info">
      <small class="comment">
          <font color="grey">
             <% if @contribution.points>1 %>
                      <td><%= @contribution.points %> points </td>
              <% else %>
                  <td><%= @contribution.points %> point </td>
              <% end %> 
              
          <td><%= link_to 'Give Point', points_contribution_path(@contribution), method: :put %></td>
          <td> by user1232443 </td>
          <td> <%= time_ago_in_words(@contribution.created_at) %></td>
          <td> | <%= link_to 'Edit', edit_contribution_path(@contribution) %></td>
          <td> | <%= link_to 'Delete', @contribution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </font>
      </small>
     </div>
     <!--<= @user = Users.where("username = 'aleix'") %>-->
     <tr> 
     
     <tr>
        <form action="/comments" accept-charset="UTF-8" method="post">
        <td><textarea class = "area" rows="6" cols="60" name="comment[content]" id="tweet_content"></textarea></td>
        <input type="hidden" name="comment[user_id]" value="2">
        <input type="hidden" name="comment[submission_id]" value=<%=@contribution.id %>>
        <br>
        <td><input class = "area" type="submit" name="commit" value="add comment" ></td></tr>
        </form>
        </tr>
    <br>
    <br>
    
<small>
        <%if @contribution.points>0%>
            <FONT color="red"> * </font> 
        <%else%> 
            <%= link_to '^', points_contribution_path(@contribution), method: :put %>
        <%end%>
        <font color="grey">
            <td> by user1232443 </td>
           <% if @contribution.points>1 %>
                    <td><%= @contribution.points %> points </td>
            <% else %>
                <td><%= @contribution.points %> point </td>
            <% end %> 
            
        <td><%= link_to 'Give Point', points_contribution_path(@contribution), method: :put %></td>
        <td> <%= time_ago_in_words(@contribution.created_at) %></td>
        </font>
    </small>
    <br> 
    <div class="text"> <%= @contribution.text %></div>
</div>

</body>
