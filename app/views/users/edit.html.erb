<p id="notice"><%= notice %></p>
<div class= "Menus">
    <div class="table">
       <div class="tr">
           <div class="d1">
                <b> <%= link_to 'HackerNews', contributions_path %></b>
                <td> <%= link_to 'New', contributions_NewIndex_path %></td> 
                <td> | <%= link_to 'Ask', contributions_AskIndex_path %></td>
                <% if current_user %>
                <td> | <%= link_to 'Threads', user_comments_Index_path(:user => current_user) %></td>
                <% end %>
                <td> | <%= link_to 'Votes', votes_path %></td>
                <td> | 
                    <% if current_user %>
                    <%= link_to 'Submit', new_contribution_path %>
                    <% else %>
                    <%= link_to 'Submit', "/auth/google_oauth2" %>
                    <% end %>
                </td>
            </div>

            <div class="d3">
                <% if current_user %>
                <td><%= link_to current_user.username, edit_user_path(current_user) %></td>
                <td> | <%= link_to 'Log out', logout_url %></td>
                <% else %>
                <%= link_to "Log in", "/auth/google_oauth2" %>
                <% end %>
            </div>
        </div>
    </div>
</div>

<body class="page">
  <div class="subpage">
  <p>
    <%= render 'form', user: @user %>
  </p>
  <div> <%= link_to 'submissions', user_contributions_Index_path(:user => @user) %> </div>
  <div> <%= link_to 'comments', user_comments_Index_path(:user => @user) %> </div>
  <td> <%= link_to 'upvoted submissions', user_voted_contributions_Index_path(:user => current_user) %> </td> /
  <td> <%= link_to 'upvoted comments', user_voted_comments_Index_path(:user => current_user) %> </td>
  </div>
</body>


